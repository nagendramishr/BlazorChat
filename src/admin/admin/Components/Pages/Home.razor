@page "/"
@attribute [Authorize]

<PageTitle>Admin Dashboard</PageTitle>

<MudText Typo="Typo.h4" GutterBottom="true">Admin Dashboard</MudText>

<MudGrid>
    <MudItem xs="12" sm="6" md="4">
        <MudCard>
            <MudCardContent>
                <MudText Typo="Typo.h6">Organizations</MudText>
                <MudText Typo="Typo.body2">Manage organization settings, branding, and AI configurations</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Href="/admin/organizations">Manage</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
    
    <MudItem xs="12" sm="6" md="4">
        <MudCard>
            <MudCardContent>
                <MudText Typo="Typo.h6">Users</MudText>
                <MudText Typo="Typo.body2">View and manage user accounts and permissions</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Href="/admin/users">Manage</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
    
    <MudItem xs="12" sm="6" md="4">
        <MudCard>
            <MudCardContent>
                <MudText Typo="Typo.h6">Settings</MudText>
                <MudText Typo="Typo.body2">Configure global application settings</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Href="/admin/settings">Configure</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
</MudGrid>
