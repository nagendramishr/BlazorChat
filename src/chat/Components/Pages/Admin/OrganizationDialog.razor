@using src.Models
@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success">
            <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
                <MudTabPanel Text="General">
                    <MudTextField @bind-Value="model.Name" Label="Organization Name" Required="true" RequiredError="Name is required!" />
                    <MudTextField @bind-Value="model.Slug" Label="Slug (URL)" Required="true" HelperText="Unique identifier for URL" Validation="@(new Func<string, IEnumerable<string>>(ValidateSlug))" />
                    <MudSwitch @bind-Value="model.IsDisabled" Label="Disabled" Color="Color.Error" />
                </MudTabPanel>
                
                <MudTabPanel Text="Branding">
                    <MudColorPicker Label="Primary Color" @bind-Text="model.PublicThemeSettings.PrimaryColor" ColorPickerStyle="ColorPickerStyle.Simple" />
                    <MudColorPicker Label="Secondary Color" @bind-Text="model.PublicThemeSettings.SecondaryColor" ColorPickerStyle="ColorPickerStyle.Simple" />
                    <MudTextField @bind-Value="model.PublicThemeSettings.LogoUrl" Label="Logo URL" />
                    <MudTextField @bind-Value="model.PublicThemeSettings.HeaderHtml" Label="Header HTML" Lines="3" />
                    <MudTextField @bind-Value="model.PublicThemeSettings.FooterHtml" Label="Footer HTML" Lines="3" />
                </MudTabPanel>

                <MudTabPanel Text="AI Configuration">
                    <MudAlert Severity="Severity.Warning">Sensitive settings. Ensure keys are stored securely.</MudAlert>
                    @* 
                       For now, assuming AI config is just basic properties. 
                       If it gets complex, we add more fields here.
                    *@
                    <MudTextField @bind-Value="model.PrivateAIConfig.ModelDeployment" Label="Model Deployment (e.g., gpt-4)" />
                    <MudTextField @bind-Value="model.PrivateAIConfig.SystemPrompt" Label="System Prompt" Lines="5" />
                </MudTabPanel>
            </MudTabs>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">@SubmitButtonText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public Organization Organization { get; set; } = new();
    [Parameter] public bool IsEdit { get; set; }

    private Organization model = new();
    private MudForm form = default!;
    private bool success;

    protected override void OnInitialized()
    {
        // Clone the object to avoid modifying the list directly before save
        model = System.Text.Json.JsonSerializer.Deserialize<Organization>(
            System.Text.Json.JsonSerializer.Serialize(Organization)
        ) ?? new Organization();
    }

    private string SubmitButtonText => IsEdit ? "Save Changes" : "Create Organization";

    private void Cancel() => MudDialog.Cancel();

    private void Submit()
    {
        form.Validate();
        if (success)
        {
            MudDialog.Close(DialogResult.Ok(model));
        }
    }

    private IEnumerable<string> ValidateSlug(string slug)
    {
        if (string.IsNullOrWhiteSpace(slug))
            yield return "Slug is required";
        
        // Simple regex or check
        if (!System.Text.RegularExpressions.Regex.IsMatch(slug, "^[a-z0-9-]+$"))
             yield return "Slug must contain only lowercase letters, numbers, and dashes.";
    }
}
