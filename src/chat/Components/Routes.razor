@using src.Components.Account.Shared
@using src.Components.Shared 
@using MudBlazor
@using Microsoft.AspNetCore.Components.Web
@using BlazorChat.Shared.Components.Admin

<Router AppAssembly="typeof(Program).Assembly" 
        AdditionalAssemblies="new[] { typeof(OrganizationList).Assembly }"
        NotFoundPage="typeof(Pages.NotFound)">
    <Found Context="routeData">
        @{
            var orgSlug = routeData.RouteValues.TryGetValue("OrganizationSlug", out var slug) ? slug?.ToString() : null;
        }
        <OrganizationResolver OrganizationSlug="@orgSlug">
            <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(Layout.MainLayout)">
                <NotAuthorized>
                    <RedirectToLogin />
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="routeData" Selector="h1" />
        </OrganizationResolver>
    </Found>
</Router>
